<form id="new-review">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="email" class="form-control" id="title">
    </div>
    <div class="mb-3">
        <label for="customRange2" class="form-label">Rating</label>
        <input type="range" class="form-range" min="0" max="5" id="rating">
    </div>
    <div class="mb-3">
        <label for="text" class="form-label">Write your thoughts here:</label>
        <textarea class="form-control" id="text" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>

<script src="/public/js/add-review.js"></script>