<section class="dash-main">
    <div class="d-flex flex-row justify-content-between">
        <h1 class="dash-welcome">Welcome Back!</h1>
        <button class="btn btn-success write-review"><a class="nav-link active text-white" aria-current="page" href="/add">Write a New Review</a></button>
    </div>
    <div>
        {{#if reviews.length}}
        <div>
            <h2 class="your-reviews">Your Reviews</h2>
        </div>
        <div>
            {{#each reviews as |review|}}
            <div>
                {{> review-info review}}
            </div>
            {{/each}}
        </div>
        {{else}}
        <div>
            <h2>You haven't written any reviews yet.</h2>
        </div>
        {{/if}}
    </div>
</section>

<script src="/js/logout.js"></script>